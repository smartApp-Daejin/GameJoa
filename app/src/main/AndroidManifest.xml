<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.daejin.gamejoa">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 이미지를 업로드를 위한 권한 추가 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoloLifeApp"
        tools:targetApi="31">
        <activity
            android:name=".setting.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".board.BoardEditActivity"
            android:exported="false" />
        <activity
            android:name=".board.BoardInsideActivity"
            android:exported="false" />
        <activity
            android:name=".board.BoardWriteActivity"
            android:exported="false" />
        <activity
            android:name=".contentsList.ContentShowActivity"
            android:exported="false" />
        <activity
            android:name=".contentsList.ContentListActivity"
            android:exported="false" />
        <activity
            android:name=".auth.JoinActivity"
            android:exported="false" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".auth.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>